{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strict": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/es"
  },
  "include": [
    "lib/**/*.ts"
  ],
  "compileOnSave": true
}
